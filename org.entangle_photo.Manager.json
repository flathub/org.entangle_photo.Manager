{
    "app-id": "org.entangle_photo.Manager",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "entangle",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
	"--filesystem=/media",
	"--filesystem=/run/media",
	"--filesystem=xdg-pictures",
        "--metadata=X-DConf=migrate-path=/org/entangle-photo/manager/",
        /* Needed for gvfs to work */
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        /* For USB, until there is a better way in flatpak */
        "--device=all"
    ],
    "cleanup": ["/lib/*.a", "/lib/*.la", "/lib/pkgconfig", "/include", "/lib/cmake"],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "libghoto2",
            "cleanup" : ["/bin", "/lib/udev", "/share/doc", "/share/libgphoto2*", "/lib/libgphoto2*/*/*.la", "/doc"],
            "config-opts" : ["--disable-introspection", "--disable-docs"],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/gphoto/libgphoto/2.5.31/libgphoto2-2.5.31.tar.bz2",
                    "sha256" : "4f81c34c0b812bee67afd5f144940fbcbe01a2055586a6a1fa2d0626024a545b"
                }
            ]
        },
	"shared-modules/gudev/gudev.json",
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "config-opts": [
                "-Dglade_catalog=false",
                "-Ddemos=false"
            ],
            "cleanup": [ "/bin/*", "/lib/peas-demo" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpeas/1.26/libpeas-1.26.0.tar.xz",
                    "sha256": "a976d77e20496479a8e955e6a38fb0e5c5de89cf64d9f44e75c2213ee14f7376"
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/lib/exiv2" ],
            "config-opts": [ "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                             "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                             "-DEXIV2_BUILD_SAMPLES=OFF" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/archive/refs/tags/v0.28.0.tar.gz",
                    "sha256": "04c0675caf4338bb96cd09982f1246d588bcbfe8648c0f5a30b56c7c496f1a0b"
                }
            ]
        },
        {
            "name": "gexiv2",
            "config-opts" : ["--without-python2-girdir", "--without-python3-girdir"],
	    "cleanup": ["/share/vala"],
            "build-options" : {
                "env": {
                    "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
                    "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gexiv2.git/",
                    "commit" : "dd7fe2f9899d7f914946a20d8bf224248196725c"
                }
            ]
        },
        {
            "name": "libraw",
            "config-opts": [ "--disable-examples",
                             "--disable-jasper",
                             "--disable-static",
                             "--enable-jpeg",
                             "--enable-lcms",
                             "--enable-openmp" ],
            "cleanup": [ "/share/doc" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libraw.org/data/LibRaw-0.21.1.tar.gz",
                    "sha256": "630a6bcf5e65d1b1b40cdb8608bdb922316759bfb981c65091fec8682d1543cd"
                },
                {
                    "type": "patch",
                    "path": "libraw-pkgconfig.patch"
                }
            ]
        },
        {
            "name": "entangle",
            "buildsystem": "meson",
	    "cleanup": ["/share/gtk-doc"],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://entangle-photo.org/download/sources/entangle-3.0.tar.xz",
                    "sha256": "9285ebab273ebe788d39a7c1bf19717cc6312cfcaa0bc55d65cf5a8d4f42a545"
                }
            ]
        }
    ]
}
